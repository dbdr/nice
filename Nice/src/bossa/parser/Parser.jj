  List formals;
  FunExp res;
}
{
  sym=monoSymbol() 
  { formals = new LinkedList(); formals.add(sym); }
  res=endFunExp(formals, Constraint.True)
  { return res; }
}

FunExp endFunExp(List formals, Constraint cst):
{
  Statement body;
  Expression exp;
}
{
  "=>"
  (
    body = RootShortStatement()
  |
    exp=Expression()
    { 
      body=new ReturnStmt(exp);
    }
  )
  { return new FunExp(cst,formals,body); }
}

