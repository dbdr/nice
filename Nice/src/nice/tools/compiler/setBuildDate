#! /bin/sh

if [ -z "$2" ]; then
  version="$1"
else
  version="$1 $2"
fi

echo > dateBuild.nice
echo "package nice.tools.compiler;" >> dateBuild.nice
echo "let String versionNumber = \"$version\";" >> dateBuild.nice
echo "let String buildDate = \""`date -u +"%Y.%m.%d, %T %Z"`"\";" >> dateBuild.nice
