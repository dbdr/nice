FunExp funExp():
{
  List formals;
  Constraint cst;
  Token f = null;
  FunExp res;
}
{
  [f = "fun"] 
  cst=constraint()
  "(" formals=monoSymbols() ")"
  res=endFunExp(formals, cst)
  {
    if (f != null) 
      bossa.util.User.warning(new Location(f), "The 'fun(...) =>' syntax is deprecated, just leave 'fun' away."); 
    return res;
  }
}

FunExp simpleVarFunExp():
{
